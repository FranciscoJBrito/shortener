<div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
  <!-- Profile dropdown -->
  <% if user_signed_in? %>
    <div class="relative ml-3" data-controller="dropdown">
      <div>
        <button type="button" class="relative flex rounded-full bg-white text-sm" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-action="dropdown#handle">
          <span class="sr-only">Open user menu</span>
          <%= image_tag "icons/user", width: 40, height: 40%>
        </button>
      </div>
      <div class="invisible absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-dropdown-target="items">
        <!-- Active: "bg-gray-100", Not Active: "" -->
        <%= link_to "Mi perfil", new_user_session_path, class: "block px-4 py-2 text-sm text-gray-700" %>
        <%= link_to 'Cerrar sesiÃ³n', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "block px-4 py-2 text-sm text-gray-700" %>
      </div>
    </div>
  <% else %>
    <div class="relative ml-3" data-controller="dropdown">
      <div>
        <button type="button" class="relative flex rounded-full bg-white text-sm" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-action="dropdown#handle">
          <span class="sr-only">Open user menu</span>
          <%= image_tag "icons/user", width: 40, height: 40%>
        </button>
      </div>
      <div class="invisible absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-dropdown-target="items">
        <!-- Active: "bg-gray-100", Not Active: "" -->
        <%= link_to "Iniciar sesion", new_user_session_path, class: "block px-4 py-2 text-sm text-gray-700" %>
        <%= link_to "Registrarse", new_user_registration_path, class: "block px-4 py-2 text-sm text-gray-700" %>
      </div>
    </div>
  <% end %>
</div>