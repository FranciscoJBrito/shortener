    <h1 class="font-bold text-4xl">Tus links</h1>
    <%= render "form" %>
  </div>
  <div id="links" class="min-w-full grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
