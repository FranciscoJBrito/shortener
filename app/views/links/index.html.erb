<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Links" %>

  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-4xl">Tus links</h1>
    <%= render "form" %>
  </div>
  
   
  <div id="links" class="min-w-full grid grid-cols-1 gap-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    <% @links.each do |link| %>
      <%= render link %>
    <% end %>
  </div>

</div>
