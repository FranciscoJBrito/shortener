<div id="<%= dom_id link %>" class="rounded-lg border-[1px] border-gray-500 p-4">
  <p class="mb-3">
    <strong class="block font-medium mb-1">Link:</strong>
    <%= link.original_url %>
  </p>
  <p class="mt-3">
    <strong class="block font-medium mb-1">Link acortado:</strong>
    <%= link.shortened_url || "No hay link acortado" %>
  </p>
  <%= button_to "Eliminar", link_path(id: link.id), method: :delete   %>
</div>
